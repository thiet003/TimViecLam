<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditIntroduceActivity"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/border_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/fromIntroduceToPerson"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_icon"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="1dp"
            android:text="Giới thiệu bản thân"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tóm tắt"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edt_introduce"
            android:padding="10dp"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:background="@drawable/edittext_editprofile"
            android:layout_width="match_parent"
            android:hint="Giới thiệu ngắn gọn về bản thân mình."
            android:minHeight="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_saveIntroduce"
            android:textStyle="bold"
            android:textSize="16sp"
            app:backgroundTint = "@null"
            android:background="@drawable/btn_save"
            android:layout_marginTop="320dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Lưu"

            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>