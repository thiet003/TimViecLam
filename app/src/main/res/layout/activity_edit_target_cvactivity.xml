<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditTargetCVActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo CV"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:padding="15dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mục tiêu nghề nghiệp"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editcvtarget_edt_text"
            android:gravity="left|top"
            android:padding="12dp"
            android:textSize="13sp"
            android:textColor="#5a5a5a"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/editcvtarget_cacel"
            android:layout_gravity="end|bottom"
            android:textStyle="bold"
            android:background="@drawable/tv_btn_cancel"
            android:layout_marginLeft="10dp"
            android:textColor="#fa6164"
            android:textAllCaps="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Hủy"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/editcvtarget_save"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/tv_btn_save"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</LinearLayout>